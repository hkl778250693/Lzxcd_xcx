.container {
  background-color: #f2f2f2;
}

.movies-template {
  margin-bottom: 30rpx;
}

.search {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 28rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.search-panel {
  position: absolute;
  top: 80rpx;
}

.xx-img {
  height: 30rpx;
  width: 30rpx;
  margin: auto 0 auto 10rpx;
}

.banner {
  width: 100%;
}

.main {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 1px 5px #666;
  margin-bottom: 60rpx;
}

.introduce {
  width: 96%;
  padding: 2%;
  padding-top: 2%;
}

/* 基本介绍 */

.title {
  font-size: 14px;
  font-weight: 600;
  color: #333;
  margin-top: 20px;
  margin-bottom: 20px;
}

.detail {
  font-size: 14px;
  color: #838383;
  margin-left: 10px;
  margin-right: 10px;
}

.map{
  margin-top: 5px;
  margin-bottom: 5px;
}

/* swiper banner */

swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
  height: 600rpx;
}
